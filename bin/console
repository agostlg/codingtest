#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use \App\Command\PurchaseCigarettesCommand;
use App\Machine\CigaretteMachineService;
use \App\Machine\CigaretteMachine;

$application = new Application();

$purchaseCigarettesCommand = new PurchaseCigarettesCommand(new CigaretteMachineService(new CigaretteMachine()));
$application->add($purchaseCigarettesCommand);

$application->run();